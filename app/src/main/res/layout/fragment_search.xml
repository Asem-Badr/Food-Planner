<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F29D9D"
    tools:context=".search.SearchFragment">

    <Button
        android:id="@+id/btnSearchCountry"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="228dp"
        android:text="@string/byCountry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSearchCategroy"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/byCategory"
        app:layout_constraintBottom_toTopOf="@+id/btnSearchIngredient"
        app:layout_constraintEnd_toEndOf="@+id/btnSearchCountry"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnSearchCountry"
        app:layout_constraintTop_toBottomOf="@+id/btnSearchCountry"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btnSearchIngredient"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/byIngredient"
        app:layout_constraintEnd_toEndOf="@+id/btnSearchCategroy"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnSearchCategroy"
        app:layout_constraintTop_toBottomOf="@+id/btnSearchCategroy" />
</androidx.constraintlayout.widget.ConstraintLayout>